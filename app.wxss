/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
} 


.pages {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
}
.pages > div>navigator {
  text-align: center;
}

.pages > div {
  margin-top: 30px;
  text-align: center;
  width: 140px;
  background: sandybrown;
  border: solid 3px sandybrown;
  box-shadow: 0px 4px 20px 0px rgba(65, 105, 225, 0.705), 0 0 4px 0 gray; 
}
image {
  width: 30px;
  height: 30px;
  display: inline-block;
}